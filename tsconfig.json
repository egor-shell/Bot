{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ESNext",
		"lib": ["ESNext"],
		"incremental": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUncheckedIndexedAccess": true,
		"sourceMap": true,
		"composite": false,
		"outDir": ".build",
		"declaration": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"]
}
